<%= form_for @review, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :review, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :review, :class => 'text_area', :style => "width:400px;height:150px;" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'button redius' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reviews_path, :class => 'button redius' %>
  </div>
<% end %>
